<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/assessment_layout_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:fitsSystemWindows="true"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="@dimen/space_6"
            android:paddingLeft="@dimen/space_10"
            android:paddingStart="@dimen/space_10"
            android:paddingTop="@dimen/space_10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_large" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_18"
            android:text=""
            android:textColor="@color/preferred_location_text"
            android:textSize="@dimen/text_regular" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/space"
            android:paddingLeft="@dimen/space_medium"
            android:paddingRight="@dimen/space_medium"
            android:paddingTop="@dimen/space"
            android:text="@string/ok"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_regular"/>


        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/space"
            android:paddingLeft="@dimen/space_medium"
            android:paddingRight="@dimen/space_medium"
            android:paddingTop="@dimen/space"
            android:text="@string/no"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular"/>

    </LinearLayout>

</LinearLayout>
